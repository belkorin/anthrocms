<div class="grid-column">
    <div class="item <% if(it.gridItemClass) {%><%=`${it.gridItemClass}-grid-content`%><%} else {%> grid-content <%}%> <% if(it.additionalClasses) {%><%= ` ${it.additionalClasses.join(' ')}`%><% } %>">
        <center><a href="<%=it.data.Link%>"><img class="image" src="<%=it.data.Image%>"></a></center>
        <a href="<%=it.data.Link%>"><p class="name"><%=it.data.Name%></p></a>
        <p class="description"><%=it.data.Description%></p>
        <p class="price"><%=it.formatPrice(it.data.price)%></p>
    </div>
</div>
